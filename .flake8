[flake8]
# Maximum line length
max-line-length = 120

# Select specific error codes to check
select = E,W,F

# Ignore specific error codes
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator

# Exclude patterns
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    env

# Per-file ignores
per-file-ignores =
    __init__.py:F401  # imported but unused in __init__.py files
    tests/*:F401,F811  # allow unused imports and redefinitions in tests