[flake8]
# Maximum line length
max-line-length = 120

# Select specific error codes to check
select = E,W,F

# Ignore specific error codes
ignore = E203,W503

# Exclude patterns
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    env

# Per-file ignores
per-file-ignores = __init__.py:F401,tests/*:F401,F811